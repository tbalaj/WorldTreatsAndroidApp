<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/adminUpdateItemButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="213dp"
            android:text="Update" />

        <Button
            android:id="@+id/adminDeleteItemButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="215dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="14dp"
            android:text="DeleteItem" />

        <EditText
            android:id="@+id/adminEditItemName"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="247dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Product Name" />

        <EditText
            android:id="@+id/adminEditItemDescription"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="17dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Product Description" />

        <EditText
            android:id="@+id/adminEditItemQty"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="179dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="133dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Qty"
            android:inputType="number" />

        <EditText
            android:id="@+id/adminEditItemPrice"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="278dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Price"
            android:inputType="number" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>